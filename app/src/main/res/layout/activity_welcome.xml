<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activity.WelcomeActivity">


    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/toLogin"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/welcome_btn_selector"
                android:text="手机号登陆"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <Button
                android:id="@+id/toRegister"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/welcome_no_stuff_btn_selector"
                android:text="注册"
                android:textColor="@drawable/btn_active_register"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/visiterLogin"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:gravity="center"
                android:text="游客试用  〉"
                android:textSize="14dp" />


            <LinearLayout
                android:id="@+id/otherLoginLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/qqBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    app:srcCompat="@drawable/qq" />

                <ImageButton
                    android:id="@+id/wxBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:layout_toLeftOf="@id/qqBtn"
                    android:background="#ffffff"
                    app:srcCompat="@drawable/wx" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>